name:                grendel
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/githubuser/grendel#readme
license:             BSD3
license-file:        LICENSE
author:              Fabian Beuke
maintainer:          mail@beuke.org
copyright:           2017 Fabian Beuke
category:            Web
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

executable grendel-exe
  hs-source-dirs:      app, src
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  exposed-modules:     Data.Grendy.BigQuery
                     , Data.Grendy.GraphQL
  build-depends:       base
                     , scotty
                     , bytestring
                     , split
                     , aeson-qq
                     , utf8-string
                     , template-haskell
                     , http-client-tls
                     , lens
                     , text
                     , transformers
                     , monad-parallel
                     , async
                     , time
                     , aeson
                     , attoparsec
                     , http-types
                     , string-conversions
                     , unordered-containers
                     , wreq
                     , http-conduit
                     , http-client
  default-language:    Haskell2010

test-suite grendy
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , grendel
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/githubuser/grendel
